<%= form_for @university, :html => { :multipart => true} do |f| %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
  <%= f.label :picture %><br />
  <%= f.file_field :picture %>
  </div>
   <div class="field">
    <%= f.label :majors %><br />
   
		<%= collection_select(:university, :major_ids, Major.all, :id, :name, {:prompt=>'select Majors'}, {:multiple=>true})  %>

  </div>
  <br / >
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
