<% if can? :edit, @university %>

<p>
  <b>Balance:</b>
  <%= @university.balance %>
</p>
<% end %>
<p>
  <b>Majors:</b>
  <%= @university.majors %>
</p>
<p>
  <b>Alumni:</b>
  <%= @university.alumni %>
