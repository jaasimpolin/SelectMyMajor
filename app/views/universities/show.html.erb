<p id="notice"><%= notice %></p>

<p>
<%= image_tag @university.picture, :class => "uni_image" %></p>

<p>
  <b>Name:</b>
  <%= @university.name %>
</p>

<p>
  <b>Address:</b>
  <%= @university.address %>
</p>

<p>
  <b>City:</b>
  <%= @university.city %>
</p>

<p>
  <b>State:</b>
  <%= @university.state %>
</p>
<p>
  <b>Phone:</b>
  <%= @university.phone %>
</p>

<p>
  <b>Email:</b>
  <%= @university.email %>
